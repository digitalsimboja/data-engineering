{
  "version": "2.0",
  "app_name": "data-segmentation-api",
  "environment_variables": {
    "CATEGORIZATION_GLUE_JOB": "data-categorization-job",
    "SEGMENTATION_GLUE_JOB": "data-segmentation-job",
    "AWS_REGION_NAME": "eu-west-1",
    "CATEGORIZATION_LAMBDA_FUNCTION_NAME": "data-segmentation-api-dev-data-categorization-bedrock-api"
  },
  "stages": {
    "dev": {
      "api_gateway_stage": "api",
      "iam_policy_file": "policy.json",
      "region": "eu-west-1",
      "lambda_functions": {
        "data-categorization-bedrock-api": {
          "lambda_memory_size": 512,
          "lambda_timeout": 300
        }
      }
    }
  }
}
